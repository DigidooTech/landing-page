---
import Header from "../components/Header.vue";
import Footer from "../components/Footer.vue";
import "../styles/global.css";

const { theme } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Digidoo - Einfach Lernfortschritte festhalten</title>
	</head>
	<body>
		<div class="py-8 lg:py-[64px]">
			<Header />
			<slot />
			<Footer theme={theme} />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	html * {
		box-sizing: border-box;
	}
	.container {
		padding-top: 4rem;
		padding-bottom: 4rem;
		width: 100%;
		max-width: 1040px;
		margin: 0 auto;
	}
</style>
